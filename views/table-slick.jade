block vars 
  - var slickgrid_dir="/js/slickgrid-spreadsheet-plugins"
doctype 
html
  head
    title Table - #{table}
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js")
    link(rel="stylesheet" href=slickgrid_dir+"/css/slick.grid.css" type="text/css")
    link(rel="stylesheet" href=slickgrid_dir+"/plugins-common.css" type="text/css")
    link(rel="stylesheet" href=slickgrid_dir+"/plugins-excel-style.css" type="text/css")
    link(rel="stylesheet" href="/css/table-slick.css" type="text/css")
    link(rel="stylesheet" href="/js/jquery.contextMenu.css" type="text/css")
    link(rel="stylesheet" href="/js/spectrum.css" type="text/css")
    script(src=slickgrid_dir+"/scripts/jquery.event.drag.js")
    script(src=slickgrid_dir+"/scripts/SlickGrid/slick.core.js")
    script(src=slickgrid_dir+"/scripts/SlickGrid/slick.grid.js")
    script(src=slickgrid_dir+"/scripts/SlickGrid/slick.dataview.js")
    script(src=slickgrid_dir+"/scripts/SlickGrid/slick.editors.js")
    script(src=slickgrid_dir+"/scripts/SlickGrid/Plugins/slick.cellrangeselector.js")
    script(src=slickgrid_dir+"/scripts/SlickGrid/Plugins/slick.cellselectionmodel.js")
    script(src=slickgrid_dir+"/scripts/SlickGrid/Plugins/slick.cellrangedecorator.js")
    script(src=slickgrid_dir+"/scripts/underscore.js")
    script(src=slickgrid_dir+"/ext.headerfilter.js")
    script(src=slickgrid_dir+"/ext.overlays.js")
    script(src="https://cdn.socket.io/socket.io-1.3.5.js")
    script(src="/js/jquery.ui.position.js")
    script(src="/js/jquery.contextMenu.js")
    script(src='/js/async.js')
    script(src='/js/q.js')
    script(src='/js/spectrum.js')
    script(src='/js/table-slick-cli.js')
  body
    div#btns
      a(href='/d/#{table}') Scarica in xlsx
      input(type='text' id='showPaletteOnly')
    div#tab
    input(type='hidden' id='name' value='#{table}')
    input(type='hidden' id='load' value='#{load}')

